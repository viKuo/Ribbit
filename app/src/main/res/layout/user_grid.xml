<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                xmlns:tools="http://schemas.android.com/tools"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                tools:context="FriendsFragment"
    android:background="@color/light_purple_background">


    <ProgressBar
        style="?android:attr/progressBarStyleHorizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/progressBar2"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"/>

    <GridView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:id="@+id/friendsGrid"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:numColumns="auto_fit"
        android:columnWidth="90dp"
        android:stretchMode="columnWidth"
        android:horizontalSpacing="@dimen/friend_grid_spacing"
        android:verticalSpacing="@dimen/friend_grid_spacing"
        android:clipToPadding="false"
        android:layout_alignParentTop="true"
        android:gravity="center"
        android:layout_centerHorizontal="true"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/empty_friends_label"
        android:id="@android:id/empty"
        android:layout_below="@id/progressBar2"
        android:layout_centerHorizontal="true"/>

</RelativeLayout>
